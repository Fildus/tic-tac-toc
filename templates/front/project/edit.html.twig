{% extends 'base.html.twig' %}

{% block title %}Edit Project{% endblock %}

{% block body %}
    <h1>Mon project</h1>
    <div class="card shadow">
        {{ form_start(form) }}
        <div class="card-body">
            <h5 class="card-title">Édition</h5>
            {{ form_widget(form) }}
        </div>
        <div class="card-footer d-flex justify-content-between">
            <div class="d-flex">
                <a class="align-self-center btn btn-sm btn-outline-dark" href="{{ path('project_user_index') }}">
                    ⇐ mes projects</a>
            </div>
            <div class="text-right">
                <button type="submit" class="btn btn-outline-success">Modifier !</button>
            </div>
            {{ form_end(form) }}
            <div class="text-right float-right">
                <form method="post" action="{{ path('project_delete', {'id': project.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ project.id) }}">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
